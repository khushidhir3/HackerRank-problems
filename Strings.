#include <iostream>
#include <string>
using namespace std;

int main() {
	// Complete the program
    string str1,str2;
    cin>>str1>>str2;
    cout<<str1.length()<<" "<<str2.length()<<endl;
    cout<<str1+str2<<endl;
    if(!str1.empty()&&!str2.empty()){
        char temp =str1[0];
        str1[0]=str2[0];
        str2[0]=temp;
        
    }
    cout<<str1<<" "<<str2<<endl;
  
    return 0;
}
